<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simiyu.com.treasury.PublicationsFragment">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:backgroundTint="#90CAF9"
                android:id="@+id/card1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text1"
                    android:text="Reports"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:backgroundTint="#90CAF9"
                android:id="@+id/card2"
                android:layout_toEndOf="@+id/card1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text2"
                    android:text="Circulars"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:id="@+id/card3"
                android:backgroundTint="#90CAF9"
                android:layout_below="@+id/card1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text3"
                    android:text="Bill And Acts"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:backgroundTint="#90CAF9"
                android:id="@+id/card4"
                android:layout_below="@+id/card2"
                android:layout_toEndOf="@+id/card3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text4"
                    android:text="Regulations"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:backgroundTint="#90CAF9"
                android:id="@+id/card5"
                android:layout_below="@+id/card3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text5"
                    android:text="Public Debt Management"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:backgroundTint="#90CAF9"
                android:id="@+id/card6"
                android:layout_below="@+id/card4"
                android:layout_toEndOf="@+id/card5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text6"
                    android:text="Agreements"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_margin="10dp"
                android:backgroundTint="#90CAF9"
                android:id="@+id/card7"
                android:layout_below="@+id/card5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/text7"
                    android:text="Other Publications"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
